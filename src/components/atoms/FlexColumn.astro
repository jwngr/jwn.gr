---
import type {FlexProps} from '../../lib/types';
import Flex from './Flex.astro';

interface Props extends FlexProps {
  readonly class?: string;
}

const {align = 'stretch', justify = 'flex-start', ...rest} = Astro.props;
---

<Flex direction="column" align={align} justify={justify} {...rest}>
  <slot />
</Flex>
